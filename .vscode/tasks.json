{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "gcc -g main.c -o huffman.exe",
            },
            "linux": {
                "command": "gcc",
                "args": [
                    "-g",
                    "*.c",
                    "-o",
                    "a.out"
                ]
            },
            "osx": {
                "command": "gcc",
                "args": [
                    "-g",
                    "*.c",
                    "-o",
                    "a.out"
                ]
            }
        }
    ]
}